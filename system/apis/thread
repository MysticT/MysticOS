-- MysticOS Thread API

function new(func)
	return proc.createThread(func)
end

function stop(id)
	return proc.stopThread(id)
end

function resume(id)
	return proc.resumeThread(id)
end

function kill(id)
	return proc.killThread(id)
end

function list()
	return proc.listThreads()
end

function count()
	return proc.threadCount()
end

function running()
	return proc.runningThread()
end