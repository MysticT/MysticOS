-- Regular input
print("Redstone inputs: ")

local count = 0
local bundledCount = 0
for _,sSide in ipairs(rs.getSides()) do
	if rs.getBundledInput(sSide) > 0 then
		bundledCount = bundledCount + 1
	end
	if rs.getInput(sSide) then
		if count > 0 then
			write(", ")
		end
		write(sSide)
		count = count + 1
	end
end

if count > 0 then
	print( "." )
else
	print( "None." )
end

-- Bundled input
if bundledCount > 0 then
	print("\nBundled inputs:")
	for sSide, bIn in pairs(rs.getBundledInput()) do
		if bIn > 0 then
			write(sSide.." = "..bIn.." (")
			local count = 0
			for sColour, nColour in pairs(colors.list()) do
				if rs.testBundledInput(sSide, nColour) then
					if count > 0 then
						write(" + ")
					end
					write(sColour)
					count = count + 1
				end
			end
			print(")")
		end
	end
end