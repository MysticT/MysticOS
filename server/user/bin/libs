local tArgs = { ... }
local bAll = false
if #tArgs > 1 then
	print("Usage: libs [all]")
	return
elseif #tArgs == 1 then
	if tArgs[1] == "all" then
		bAll = true
	else
		print("Usage: libs [all]")
		return
	end
end

local tLibs = os.listSharedLibs(bAll)
table.insert(tLibs, "shell")
table.sort(tLibs)
local w, h = term.getSize()
print(utils.tabulate(w, tLibs))