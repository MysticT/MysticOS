white = 1
orange = 2
magenta = 4
lightBlue = 8
yellow = 16
lime = 32
pink = 64
gray = 128
lightGray = 256
cyan = 512
purple = 1024
blue = 2048
brown = 4096
green = 8192
red = 16384
black = 32768

local tColors = {
["white"] = white,
["orange"] = orange,
["magenta"] = magenta,
["lightBlue"] = lightBlue,
["yellow"] = yellow,
["lime"] = lime,
["pink"] = pink,
["gray"] = gray,
["lightGray"] = lightGray,
["cyan"] = cyan,
["purple"] = purple,
["blue"] = blue,
["brown"] = brown,
["green"] = green,
["red"] = red,
["black"] = black
}

function combine(...)
	return bit32.bor(...)
end

function subtract(colors, ...)
	local r = colors
	for _,c in ipairs({...}) do
		r = bit32.band(r, bit32.bnot(c))
	end
	return r
end

function test(colors, color)
	return bit32.band(colors, color) == color
end

function get(sColor)
	return tColors[sColor]
end

function getName(nColor)
	for name, c in pairs(tColors) do
		if c == nColor then
			return name
		end
	end
	return nil
end

function list()
	return table.copy(tColors)
end