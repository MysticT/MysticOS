local function LoadFromFile(hFile)
	local tConfig = {}
	local sLine = hFile:readLine()
	while sLine do
		local k, v = string.match(sLine, "(.+) = (.+)")
		if not k or not v then
			return nil
		end
		tConfig[k] = v
		sLine = hFile:readLine()
	end
	return tConfig
end

local function SaveToFile(hFile, tConfig)
	for k, v in pairs(tConfig) do
		local sK = tostring(k)
		local sV = tostring(v)
		hFile:writeLine(sK.." = "..sV)
	end
end

-- Lib functions

function load(sFileName)
	local hFile = fs.open(sFileName, "r")
	if hFile:isOpen() then
		local tConfig = LoadFromFile(hFile)
		hFile:close()
		if not tConfig then
			return nil, "Error loading config file"
		end
		return tConfig
	else
		return nil, "Error opening file "..sFileName
	end
end

function save(sFileName, tConfig)
	CheckVarType(tConfig, "table")
	local hFile = fs.open(sFileName, "w")
	if hFile:isOpen() then
		SaveToFile(hFile, tConfig)
		hFile:close()
	else
		return false, "Error opening file "..sFileName
	end
	return true
end