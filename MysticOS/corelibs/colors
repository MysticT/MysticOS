-- MysticOS Colors Lib

white = 1
orange = 2
magenta = 4
lightBlue = 8
yellow = 16
lime = 32
pink = 64
gray = 128
lightGray = 256
cyan = 512
purple = 1024
blue = 2048
brown = 4096
green = 8192
red = 16384
black = 32768

function combine(...)
	return bit32.bor(...)
end

function subtract(c, ...)
	for _,n in ipairs({...}) do
		c = bit.band(c, bit.bnot(n))
	end
	return c
end

function test(c, n)
	return bit.band(c, n) == c
end
